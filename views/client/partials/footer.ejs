  <!-- Hover Behavior -->
  <script>
    document.querySelectorAll('.dropdown-subitem').forEach(item => {
      item.addEventListener('mouseenter', function () {
        const extraDropdown = this.querySelector('.extra-dropdown');
        if (!extraDropdown) return;

        // Reset any previous direction
        extraDropdown.style.left = '100%';
        extraDropdown.style.right = 'auto';

        // Show temporarily to measure
        extraDropdown.style.display = 'block';
        extraDropdown.style.visibility = 'hidden';

        const rect = extraDropdown.getBoundingClientRect();

        // If going off screen right, flip to left
        if (rect.right > window.innerWidth) {
          extraDropdown.style.left = 'auto';
          extraDropdown.style.right = '100%';
        }

        // Show properly
        extraDropdown.style.visibility = 'visible';
      });

      // Optional: hide on mouse leave if needed
      item.addEventListener('mouseleave', function () {
        const extraDropdown = this.querySelector('.extra-dropdown');
        if (extraDropdown) {
          extraDropdown.style.display = 'none';
        }
      });

      // Always show it again on hover
      item.addEventListener('mouseenter', function () {
        const extraDropdown = this.querySelector('.extra-dropdown');
        if (extraDropdown) {
          extraDropdown.style.display = 'block';
        }
      });
    });
  </script>


